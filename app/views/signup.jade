
extends layout

block content
	#signup-container.well.span4
		form( method="post")#signup-form.form-horizontal

			.form-group
				.col-xs-offset-2.col-xs-10
					legend Sign up

			.form-group
				label(for="firstname").control-label.col-xs-2 First name
				.col-xs-10
					input(type="text", name="firstname",placeholder="First name",required)#firstname.form-control

			.form-group
				label(for="lastname").control-label.col-xs-2 Last name
				.col-xs-10
					input(type="text", name="lastname",placeholder="Last name",required)#lastname.form-control

			.form-group
				label(for="username").control-label.col-xs-2 User name
				.col-xs-10
					input(type="text", name="username",placeholder="User name",required,
					pattern=".{5,10}", title="5 to 10 characters")#username.form-control

			.form-group
				label(for="password").control-label.col-xs-2 Password
				.col-xs-10
					input(type="password", name="password",placeholder="Password"
					,required,pattern=".{5,10}", title="5 to 10 characters")#password.form-control

			.form-group
				label(for="cpassword").control-label.col-xs-2 Confirm Password
				.col-xs-10
					input(type="password", name="cpassword",placeholder="Password"
					,required,pattern=".{5,10}", title="5 to 10 characters")#cpassword.form-control

			.form-group
				label(for="email").control-label.col-xs-2 Email
				.col-xs-10
					input(type="email", name="email",placeholder="Email",required)#email.form-control

			.form-group
				.col-xs-offset-2.col-xs-10
					input(type="submit",value="Create My Account")#btn-signup.btn.btn-primary

			.form-group
				.col-xs-offset-2.col-xs-10
					p
						| Already have an account? &nbsp;
						a(href='/signin') Sign in


block scripts
	script(src="/js/signup.js")
